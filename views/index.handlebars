<h1 class="text-center">Eat Da Burger App</h1>

<img src="/assets/img/burger.jpg" alt="Burger" width="400px" height="400px" class="rounded mx-auto d-block">

<div class="container">

  <div class="row justify-content-center addBurger">
    <div class="col-4" align="center">
      <h2 class="burgerText text-center">Custom Burgers!</h2>
        <ul class="list-group">
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
          {{/unless}}
          {{/each}}
        </ul>
    </div>
    <div class="col-4" align="center">
      <h2 class="text-center">Add a Burger</h2>
      <form class="create-form text-center">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <br>
          <input type="text" id="ca" name="burger_name" class="form-control">
        </div>
        <button type="submit" class="btn-primary">Add Burger</button>
      </form>
    </div>
    <div class="col-4" align="center">
      <h2 class="burgerText text-center">Burgers eaten!</h2>
        <ul class="list-group">
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
          {{/if}}
          {{/each}}
        </ul>
  </div>
</div>